<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/preferences_category_multimedia">
        <CheckBoxPreference
            android:key="sound"
            android:title="@string/preference_check_sound_title"/>

        <RingtonePreference android:showDefault="true"
            android:key="sound_tone" android:title="@string/preference_ringtone_title"
            android:ringtoneType="alarm">
        </RingtonePreference>

        <CheckBoxPreference
            android:key="vibration"
            android:title="@string/preference_check_vibration_title"/>
    </PreferenceCategory>
</PreferenceScreen>